PORT=3001
NODE_ENV=development

# Database
DB_HOST=mysql
DB_PORT=3306
DB_NAME=slideshow_db
DB_USER=slideshow_user
DB_PASSWORD=slideshow_password

# JWT
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# LINE Login API
LINE_CHANNEL_ID=your_line_channel_id
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_REDIRECT_URI=http://localhost:3000/auth/callback
LINE_SCOPE=profile%20openid

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads

# Storage Configuration
STORAGE_TYPE=local
# For local storage
LOCAL_UPLOAD_PATH=uploads/images
LOCAL_PUBLIC_PATH=/uploads/images

# For S3 storage (uncomment and configure when migrating to S3)
# STORAGE_TYPE=s3
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your-access-key-id
# S3_SECRET_ACCESS_KEY=your-secret-access-key
# S3_ENDPOINT=https://s3.amazonaws.com

